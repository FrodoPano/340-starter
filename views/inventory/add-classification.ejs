<%- include('../layouts/header') %>

<main class="classification-form">
  <h1><%= title %></h1>
  
  <% if (errors) { %>
    <div class="alert alert-danger">
      <% errors.forEach(error => { %>
        <p><%= error.msg %></p>
      <% }) %>
    </div>
  <% } %>

  <form method="post" action="/inv/add-classification">
    <div class="form-group">
      <label for="classification_name">Classification Name</label>
      <input type="text" name="classification_name" id="classification_name" 
             required pattern="^[a-zA-Z0-9]+$"
             title="No spaces or special characters allowed">
      <small>No spaces or special characters allowed</small>
    </div>
    <button type="submit" class="btn">Add Classification</button>
  </form>
</main>

<%- include('../layouts/footer') %>
