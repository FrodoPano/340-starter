<%- include('../layouts/header') %>

<main class="delete-confirm">
  <h1><%= title %></h1>
  
  <% if (errors) { %>
    <div class="alert alert-danger">
      <% errors.forEach(error => { %>
        <p><%= error.msg %></p>
      <% }) %>
    </div>
  <% } %>

  <p class="warning">Confirm Deletion - The delete is permanent.</p>

  <form method="post" action="/inv/delete">
    <div class="form-group">
      <label for="inv_make">Make</label>
      <input type="text" name="inv_make" id="inv_make" value="<%= inv_make %>" readonly>
    </div>
    
    <div class="form-group">
      <label for="inv_model">Model</label>
      <input type="text" name="inv_model" id="inv_model" value="<%= inv_model %>" readonly>
    </div>
    
    <div class="form-group">
      <label for="inv_year">Year</label>
      <input type="text" name="inv_year" id="inv_year" value="<%= inv_year %>" readonly>
    </div>
    
    <div class="form-group">
      <label for="inv_price">Price</label>
      <input type="text" name="inv_price" id="inv_price" value="<%= inv_price %>" readonly>
    </div>
    
    <input type="hidden" name="inv_id" value="<%= inv_id %>">
    
    <button type="submit" class="btn btn-danger">Delete Vehicle</button>
    <a href="/inv/" class="btn btn-secondary">Cancel</a>
  </form>
</main>

<%- include('../layouts/footer') %>